generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String

  role UserRole @default(USER)

  cart Cart?

  createdAd DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Cart {
  id Int @id @default(autoincrement())

  user User @relation(fields: [userId], references: [id])
  userId Int @unique

  createdAd DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Product {
  id Int @id @default(autoincrement())

  category Category @relation(fields: [categoryId], references: [id])
  categoryId Int 

  ingredients Ingredient[]

  createdAd DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model CartProduct {
  id Int @id @default(autoincrement())

  createdAd DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Category {
  id Int @id @default(autoincrement())

  product Product []

  createdAd DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Ingredient {
  id Int @id @default(autoincrement())

  products Product []

  createdAd DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Variation {
  id Int @id @default(autoincrement())

  createdAd DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model Order {
  id Int @id @default(autoincrement())

  status OrderStatus

  createdAd DateTime @default(now())
  updateAt  DateTime @updatedAt
}

model VerificationCode {
  id Int @id @default(autoincrement())

  createdAd DateTime @default(now())
  updateAt  DateTime @updatedAt
}

enum UserRole {
  ADMIN
  USER
}

enum OrderStatus {
  PENDING
  CANCELLED
  SUCCESSFUL
}
